{
  "name": "ngx-kit-src",
  "version": "2.0.0-beta.1",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./dist-server && rimraf ./covarage && rimraf ./tmp",
    "core:playground": "ng serve --project=core-playground",
    "core:build": "npm run core:build:packgr && npm run core:build:release && npm run core:build:publish",
    "core:build:packgr": "ng build --project=core",
    "core:build:release": "node ./packages/core/release.js",
    "core:build:publish": "publish-build.sh core",
    "collection:playground": "ng serve --project=collection-playground",
    "collection:build": "npm run collection:build:clean && npm run collection:build:release && npm run collection:build:schematize && npm run collection:build:tsc && npm run collection:build:publish",
    "collection:build:clean": "rimraf ./dist/collection",
    "collection:build:release": "node ./packages/collection/release.js",
    "collection:build:schematize": "ngx-kit schematize ./packages/collection/.schematize-schema.json",
    "collection:build:tsc": "tsc -p ./dist/collection/tsconfig.json",
    "collection:build:publish": "publish-build.sh collection",
    "schematics:build": "npm run build:clean && tsc -p ./packages/schematics/tsconfig.json && node release-schematics",
    "website:serve": "ng serve --project=website",
    "website:gen-docs": "npm run website:gen-docs:core && npm run website:gen-docs:collection",
    "website:gen-docs:core": "ngx-kit gen-docs ./packages/core ./website/assets/docs",
    "website:gen-docs:collection": "ngx-kit gen-docs ./packages/collection ./website/assets/docs",
    "website:build": "npm run clean && ng run website:build",
    "website:server:build": "ng run website:server",
    "website:server:bundle": "webpack --config ./website/webpack.server.config.js --progress --colors",
    "website:server:serve": "node ./dist/server",
    "website:deploy": "npm run website:gen-docs && npm run website:build && npm run website:server:build && npm run website:server:bundle && npm run website:docker:build && npm run website:docker:push",
    "website:docker:build": "docker build -t dhub.nvx.me:443/ngx-kit-website-prod .",
    "website:docker:run": "docker run -d -p 8002:8000 dhub.nvx.me:443/ngx-kit-website-prod",
    "website:docker:push": "docker push dhub.nvx.me:443/ngx-kit-website-prod",
    "release:build": "npm run test && npm run lint && npm run core:build && npm run collection:build",
    "release:publish": "npm publish ./tmp/core-builds --access=public && npm publish ./tmp/collection-builds --access=public",
    "test": "ng test --watch=false",
    "test:watch": "ng test --watch=true",
    "lint": "npm run lint:ng && npm run lint:styles",
    "lint:ng": "ng lint --project=website",
    "lint:styles": "stylelint ./{packages/collection,playground,website}/**/*.scss",
    "lint:styles:fix": "stylelint ./{packages/collection,playground,website}/**/*.scss --fix"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.0.0",
    "@angular/common": "6.0.0",
    "@angular/compiler": "6.0.0",
    "@angular/compiler-cli": "6.0.0",
    "@angular/core": "6.0.0",
    "@angular/forms": "6.0.0",
    "@angular/http": "6.0.0",
    "@angular/language-service": "6.0.0",
    "@angular/platform-browser": "6.0.0",
    "@angular/platform-browser-dynamic": "6.0.0",
    "@angular/router": "6.0.0",
    "@angular/service-worker": "6.0.0",
    "@nvxme/ngx-md-render": "^1.0.0-alpha.5",
    "hammerjs": "^2.0.8",
    "rxjs": "^6.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.6.0",
    "@angular-devkit/build-ng-packagr": "^0.6.0",
    "@angular-devkit/core": "0.6.0",
    "@angular-devkit/schematics": "0.6.0",
    "@angular/cli": "6.0.0",
    "@angular/platform-server": "6.0.0",
    "@angularclass/hmr": "^2.1.3",
    "@nguniversal/express-engine": "^5.0.0-beta.5",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.5",
    "@ngx-kit/schematics": "^1.0.0-alpha.6",
    "@types/express": "^4.11.1",
    "@types/hammerjs": "^2.0.35",
    "@types/highlight.js": "^9.12.2",
    "@types/jasmine": "^2.8.2",
    "@types/node": "^9.4.7",
    "awesome-typescript-loader": "^4.0.1",
    "codelyzer": "^4.2.1",
    "core-js": "^2.5.2",
    "express": "^4.16.3",
    "fs-extra": "^5.0.0",
    "jasmine": "^2.8.0",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "^1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ncp": "^2.0.0",
    "ng-packagr": "^2.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.52.1",
    "stylelint": "^9.1.3",
    "stylelint-order": "^0.8.1",
    "tslint": "^5.8.0",
    "typescript": "2.7.2",
    "webpack-cli": "^2.1.3"
  }
}
