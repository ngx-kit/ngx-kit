{
  "name": "ngx-kit-src",
  "version": "1.0.0-beta.10",
  "license": "MIT",
  "scripts": {
    "start": "ng serve -a=playground",
    "build": "npm run build:clean && npm run build:ngc && npm run build:release && npm run build:rollup:es && npm run build:rollup:umd",
    "build:clean": "rimraf ./dist",
    "build:ngc": "ngc -p ./packages/ngx-kit/tsconfig.json",
    "build:rollup:es": "rollup -c rollup.es.config.js",
    "build:rollup:umd": "rollup -c rollup.umd.config.js",
    "build:release": "node release",
    "copy": "ngx-kit copy",
    "build-and-copy": "npm run build && npm run copy",
    "build:schematics": "npm run build:clean && tsc -p ./packages/schematics/tsconfig.json && node release-schematics",
    "publish": "npm publish ./dist/release --access=public",
    "release": "npm run test && npm run lint && npm run build && npm run publish",
    "test": "ng test -a=playground -sr",
    "test:local": "ng test -a=playground",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.3.5",
    "@angular/cli": "^1.5.0-beta.4",
    "@angular/common": "^4.3.5",
    "@angular/compiler": "^4.3.5",
    "@angular/compiler-cli": "^4.3.5",
    "@angular/core": "^4.3.5",
    "@angular/forms": "^4.3.5",
    "@angular/http": "^4.3.5",
    "@angular/language-service": "^4.4.4",
    "@angular/platform-browser": "^4.3.5",
    "@angular/platform-browser-dynamic": "^4.3.5",
    "@angular/router": "^4.3.5",
    "@ngx-kit/styler": "^1.0.0-beta.15",
    "moment": "^2.18.1",
    "rxjs": "^5.4.3",
    "zone.js": "^0.8.16"
  },
  "devDependencies": {
    "@angular-devkit/core": "0.0.17",
    "@angular-devkit/schematics": "0.0.30",
    "@ngx-kit/schematics": "^1.0.0-alpha.6",
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.23",
    "codelyzer": "^3.1.2",
    "core-js": "^2.5.0",
    "fs-extra": "^4.0.1",
    "jasmine": "^2.7.0",
    "jasmine-core": "^2.7.0",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ncp": "^2.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.47.6",
    "tslint": "^5.6.0",
    "typescript": "^2.5.3"
  }
}
