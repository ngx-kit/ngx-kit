{
  "name": "ngx-kit-src",
  "version": "1.0.0-rc.0",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./dist-server && rimraf ./covarage && rimraf ./tmp",
    "core:playground": "ng serve -a=playground-core",
    "core:build": "npm run clean && npm run core:build:ngc && npm run core:build:release && npm run core:build:rollup && npm run core:build:publish",
    "core:build:ngc": "ngc -p ./packages/core/tsconfig.build.json",
    "core:build:rollup": "npm run core:build:rollup:es && npm run core:build:rollup:umd",
    "core:build:rollup:es": "rollup -c ./packages/core/rollup.es.config.js",
    "core:build:rollup:umd": "rollup -c ./packages/core/rollup.umd.config.js",
    "core:build:release": "node ./packages/core/release",
    "core:build:publish": "publish-build.sh core",
    "collection:playground": "ng serve -a=playground-collection",
    "collection:build": "npm run collection:build:clean && npm run collection:build:release && npm run collection:build:schematize && npm run collection:build:tsc && npm run collection:build:publish",
    "collection:build:clean": "rimraf ./dist/collection",
    "collection:build:release": "node ./packages/collection/release",
    "collection:build:schematize": "ngx-kit schematize ./packages/collection/.schematize-schema.json",
    "collection:build:tsc": "tsc -p ./dist/collection/release/tsconfig.json",
    "collection:build:publish": "publish-build.sh collection",
    "schematics:build": "npm run build:clean && tsc -p ./packages/schematics/tsconfig.json && node release-schematics",
    "website:serve": "ng serve -a=website",
    "website:gen-docs": "npm run website:gen-docs:core && npm run website:gen-docs:collection",
    "website:gen-docs:core": "ngx-kit gen-docs ./packages/core ./website/assets/docs",
    "website:gen-docs:collection": "ngx-kit gen-docs ./packages/collection ./website/assets/docs",
    "website:build": "npm run clean && ng build -a=website --aot --output-hashing=all --prod",
    "website:server:build": "ng build -a=website-server --prod -oh=none",
    "website:server:serve": "node ./website/server",
    "website:deploy": "npm run website:gen-docs && npm run website:build && npm run website:server:build && npm run website:docker:build && npm run website:docker:push",
    "website:docker:build": "docker build -t dhub.nvx.me:443/ngx-kit-website-prod .",
    "website:docker:run": "docker run -d -p 8002:8000 dhub.nvx.me:443/ngx-kit-website-prod",
    "website:docker:push": "docker push dhub.nvx.me:443/ngx-kit-website-prod",
    "release": "npm run test && npm run lint && npm run core:build && npm run collection:build && npm run publish",
    "publish": "npm publish ./tmp/core-builds --access=public && npm publish ./tmp/collection-builds --access=public",
    "test": "ng test -a=playground-core -sr",
    "test:local": "ng test -a=playground-core",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/language-service": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@nvxme/ngx-md-render": "^1.0.0-alpha.5",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@angular-devkit/core": "0.0.20",
    "@angular-devkit/schematics": "0.0.37",
    "@angular/cli": "^1.5.0",
    "@angular/platform-server": "^5.0.1",
    "@angularclass/hmr": "^2.1.3",
    "@nguniversal/express-engine": "^5.0.0-beta.5",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.5",
    "@ngx-kit/schematics": "^1.0.0-alpha.6",
    "@types/highlight.js": "^9.12.1",
    "@types/jasmine": "^2.6.3",
    "@types/node": "^8.0.50",
    "codelyzer": "^4.0.1",
    "core-js": "^2.5.1",
    "fs-extra": "^4.0.2",
    "jasmine": "^2.8.0",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ncp": "^2.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.51.0",
    "tslint": "^5.8.0",
    "typescript": "~2.4.2"
  }
}
